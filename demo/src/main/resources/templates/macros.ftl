<#macro contactCard name phone email>
    <div id="contact-card">
        <i id="contact-img" class="bx bx-user"></i>
        <h2 id="contact-name">${name}</h2>
        <p id="contact-phone">${phone}</p>
        <p id="contact-email">${email}</p>
        <i id="contact-favorite-i" class="bx bx-heart"></i>
        <i id="contact-edit-i" class="bx bx-edit"></i>
        <i id="contact-delete-i" class="bx bx-trash"></i>
    </div>
</#macro>